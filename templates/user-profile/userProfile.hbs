{{>navigation}}

<div class="user-profile">
    <input type="hidden" name="userId" value="{{userId}}" />

    <img id="user-avatar-url" src="{{avatarUrl}}" alt="user-profile">
    <h1>{{userProfileName}}</h1>
    <h2>{{email}}</h2>
    {{#if isCurrentUser}}
    <a id="deleteUserButton" href="#/user/profile/deleteUser/{{userPanelId}}">DELETE USER!</a>
    {{/if}}
    <p id="user-listings-title">User Memes
        </h3>
        <div class="user-meme-listings">
            {{#each userMemes}} {{> userProfileMeme}} {{else}}
            <p class="no-memes">No memes in database.</p>
            {{/each}}
        </div>
</div>

{{>footer}}